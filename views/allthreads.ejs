<!DOCTYPE html>
<html>
<% include head %>
<body>
	<div class="container">
		<h1>Threads</h1>
		<% include navbar %>
		<div class="well">
			<form>
				<h2>Create Thread</h2>
				<label>
					<h3>Title</h3>
					<input id="titleText" type="text" class="form-control" />
				</label><br />
				<button id="submitThread" type="button" class="btn btn-info">+</button>
			</form>
			<% for(let i = 0; i < ret.length; i++){ %>
				<div class="row">
					<div class="col-xs-11">
						<h3>Title: <%= ret[i].title %> </h3>
						<h4>Posts: <%= ret[i].children %> </h4>
					</div>
					<div class="col-xs-1">
						<button id="<%= ret[i].id %>" class="btn btn-success">Go</button>
					</div>
				</div>
			<% } %>
		</div>
	</div>
</body>
</html>